import speech_recognition as sr //imported Python Speech Recognition Library
import pyttsx3
import pywhatkit
import datetime
import wikipedia //imported wikipedia souces from server
import pyjokes 

listener = sr.Recognizer() //input command will be recorded
engine = pyttsx3.init() 
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[1].id) //voice 1 assigned to the compiler


def talk(text):
    engine.say(text)
    engine.runAndWait()


def take_command(): //command from the user
    try:
        with sr.Microphone() as source:
            print('listening...') // this will display in the outbut box
            voice = listener.listen(source) // this will be spoken by the compiler in Voice [1]
            command = listener.recognize_google(voice) // input would be evaluated 
            command = command.lower()
            if 'alexa' in command:
                command = command.replace('alexa', '')
                print(command)
    except:
        pass
    return command


def run_alexa():
    command = take_command() //some major input and output commands for user
    print(command)
    if 'play' in command:
        song = command.replace('play', '')
        talk('playing ' + song)
        pywhatkit.playonyt(song)
    elif 'time' in command:
        time = datetime.datetime.now().strftime('%I:%M %p')
        talk('Current time is ' + time)
    elif 'who the heck is' in command:
        person = command.replace('who the heck is', '')
        info = wikipedia.summary(person, 1)
        print(info)
        talk(info)
    elif 'date' in command:
        talk('sorry, I have a headache')
    elif 'are you single' in command:
        talk('I am in a relationship with wifi')
    elif 'joke' in command:
        talk(pyjokes.get_joke())
    else:
        talk('Please say the command again.')


while True:
    run_alexa()
